# Needed for static linking
--enable-pic
# SwScale acceleration
--enable-runtime-cpudetect
# Don't need the executables
--disable-ffmpeg
--disable-ffserver
--disable-ffplay
--disable-ffprobe

# Keep size down
--disable-debug
--disable-encoders
--disable-muxers
--disable-protocols
--enable-protocol=file
--disable-devices
--disable-shared

# HWaccels bring outside dependencies
--disable-hwaccels

# These are usually disabled, but make sure
--disable-network
--disable-zlib
